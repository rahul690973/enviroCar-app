<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/envirocar_background"
    android:padding="20dp">
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_info"
        
       >
        
        	<RelativeLayout 
        	    android:layout_width="wrap_content"
        	    android:layout_height="fill_parent"
        	    android:id="@+id/user_picture"
        	    android:layout_alignParentLeft="true">
        	    
        	    	<ImageView 
        	    	    android:layout_width="wrap_content"
        	    	    android:layout_height="wrap_content"
        	    	    android:id="@+id/profile_picture"
        	    	    android:src="@drawable/aks"/>"
        	    
        	</RelativeLayout>
        	
        	<RelativeLayout
        	    android:layout_width="wrap_content"
        	    android:layout_height="match_parent"
        	    android:id="@+id/user_details"
        	    android:layout_alignParentRight="true"
        	    android:layout_marginTop="20dp"
        	    android:layout_marginRight="15dp"
        	    
        	    >
        	    	
        	   		<TextView 
        	   		    android:layout_width="wrap_content"
        	   		    android:layout_height="wrap_content"
        	   		    android:textSize="22sp"
        	   		    android:text="Rahul Raja"
        	   		    android:textStyle="bold"
        	   		    android:textColor="#047CAC"
        	   		    />
        	   		    
        	    
        	    	<TextView
		        	    android:layout_width="wrap_content"
		        	    android:layout_height="wrap_content"
		        	    android:layout_marginTop="60dp"
		        	    android:text="Your Tracks" 
		        	    android:id="@+id/your_tracks"
		        	    android:textStyle="bold"/>
        	    	
        	    	<TextView
		        	    android:layout_width="wrap_content"
		        	    android:layout_height="wrap_content"
		        	    android:layout_below="@+id/your_tracks"
		        	    android:id="@+id/total_tracks"
		        	    android:layout_marginTop="10dp"
		        	    android:text="Total Tracks"
		        	    android:textStyle="bold" />
        	    
        	</RelativeLayout>

        	<LinearLayout
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_below="@+id/user_picture"
        	    android:layout_marginTop="30dp"
        	    android:orientation="vertical" >

        	    <TextView
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:layout_gravity="center"
        	        android:drawableRight="@drawable/sustainability_help"
        	        android:gravity="center_vertical"
        	        android:text="Sustainability Rank"
        	        android:textSize="22sp"
        	        android:textStyle="bold" />

        	    <TextView
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:layout_gravity="center"
        	        android:layout_marginTop="25dp"
        	        android:background="#1D89B4"
        	        android:paddingBottom="12dp"
        	        android:paddingLeft="25dp"
        	        android:paddingRight="25dp"
        	        android:paddingTop="12dp"
        	        android:text="4 out of 45"
        	        android:textColor="#ffffff"
        	        android:textSize="16sp" />

        	    <TextView
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:layout_marginTop="45dp"
        	        android:drawableLeft="@drawable/chart_icon"
        	        android:drawablePadding="20dp"
        	        android:gravity="center"
        	        android:paddingRight="40dp"
        	        android:text="View Statistics"
        	        android:textSize="20sp"
        	        android:textStyle="bold" 
        	        android:clickable="true"
        	        android:id="@+id/view_statistics"/>

        	    <TextView
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:layout_marginTop="18dp"
        	        android:layout_weight="0.09"
        	        android:drawableLeft="@drawable/friends_icon"
        	        android:drawablePadding="20dp"
        	        android:gravity="center"
        	        android:paddingRight="40dp"
        	        android:text="Compare with Friends"
        	        android:textSize="20sp"
        	        android:textStyle="bold" 
        	        android:id="@+id/compare_friends"
        	        android:clickable="true"/>
        	</LinearLayout>
        
    </RelativeLayout>
    
</ScrollView>
