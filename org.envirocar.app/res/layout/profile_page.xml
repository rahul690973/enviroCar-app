<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/envirocar_background"
    android:padding="15dp" >


        <RelativeLayout
            android:id="@+id/user_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/user_picture"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true" >

                <ImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="170dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="-20dp"
                    android:contentDescription="@string/profile_picture"
                    android:src="@drawable/profile_picture" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/user_details"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/user_picture"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                 >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/username"
                    android:textColor="#047CAC"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/your_tracks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/username"
                    android:layout_marginTop="30dp"
                    android:text="@string/your_tracks"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/total_tracks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/your_tracks"
                    android:layout_marginTop="10dp"
                    android:text="@string/total_tracks"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_picture"
                android:layout_marginTop="30dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableRight="@drawable/sustainability_help"
                    android:gravity="center_vertical"
                    android:text="@string/sustainability_rank"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/view_leaderboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:background="#1D89B4"
                    android:clickable="true"
                    android:paddingBottom="12dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:paddingTop="12dp"
                    android:text="@string/calculating_rank"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/view_statistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/chart_icon"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingRight="40dp"
                    android:text="@string/view_statistics"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/compare_friends"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="18dp"
                    android:layout_weight="0.09"
                    android:clickable="true"
                    android:drawableLeft="@drawable/friends_icon"
                    android:drawablePadding="20dp"
                    android:paddingRight="40dp"
                    android:text="@string/compare_wid_friends"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    

</ScrollView>